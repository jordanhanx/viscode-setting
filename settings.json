{
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
    "workbench.list.openMode": "doubleClick",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "window.commandCenter": false,
    "window.restoreWindows": "none",
    "editor.formatOnSave": true,
    "editor.detectIndentation": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showStatusBar": true,
    "editor.renderWhitespace": "all",
    "explorer.confirmDragAndDrop": false,
    "livePreview.openPreviewTarget": "External Browser",
    "livePreview.customExternalBrowser": "Chrome",
    "debug.toolBarLocation": "docked",
    // Terminal/Console
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.defaultLocation": "editor",
    // Remote
    "remote-explorer.foldersSortOrder": "alphabetical",
    "remote.SSH.showLoginTerminal": true,
    // Git
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",
    // C/C++
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "/usr/bin/clangd",
    "clangd.arguments": [
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--clang-tidy",
        "--function-arg-placeholders",
        "--fallback-style=llvm",
        "--header-insertion-decorators",
        "--header-insertion=iwyu",
        "--pretty",
        "--background-index=false",
    ],
    "cmake.languageSupport.dotnetPath": "/usr/local/share/dotnet/dotnet",
    "cmake.automaticReconfigure": false,
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.showOptionsMovedNotification": false,
    "cmake.options.advanced": {
        "kit": {
            "statusBarVisibility": "icon"
        },
        "build": {
            "statusBarVisibility": "icon",
            "projectStatusVisibility": "visible"
        },
        "buildTarget": {
            "statusBarVisibility": "visible"
        },
        "launch": {
            "statusBarVisibility": "visible",
            "projectStatusVisibility": "visible"
        },
        "debug": {
            "statusBarVisibility": "visible",
            "projectStatusVisibility": "visible"
        },
        "launchTarget": {
            "statusBarVisibility": "visible"
        },
        "cpack": {
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "visible"
        },
        "workflow": {
            "statusBarVisibility": "hidden",
            "projectStatusVisibility": "visible"
        },
        "configure": {
            "projectStatusVisibility": "visible",
        },
    },
}
